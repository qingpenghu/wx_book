/**start.wxss**/
page{
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    font-size: 10pt;
    line-height: 150%;
    min-height: 100%;
    width: 100%;
  }
  .abstract{
    display: flex;
    flex-wrap: wrap;
    box-sizing: content-box;
    padding: 20rpx 30rpx;
  }
  .abstract .imageBox {
    width: 120rpx;
    height: 160rpx;
    /* align-self: flex-start;
    margin: 0 30rpx; */
  }
  .imageBox .image{
    width: 100%;
    height: 100%;
  }
  .book_name{
    width: 540rpx;
    height: 160rpx;
    font-size: 24rpx;
    display: flex;
    flex-wrap: wrap;
    box-sizing: content-box;
    align-items: center;
    padding-left:30rpx;
    color: #b6b6b6;
  }
  .book_name .name{
    width: 510rpx;
    font-size: 40rpx;
    font-weight: bold;
    color: #595959;
    height: 60rpx;
    line-height: 60rpx;
  }
  .book_name .relevant{
    width: 510rpx;
    white-space: nowrap;
  }
  .book_name .relevant .author{
    color: #ca5e27;
    font-weight: bold;
  }
  .book_name .update{
    width: 510rpx;
  }
  .operation {
    padding: 20rpx 30rpx;
    width: 710rpx;
    display: flex;
    box-sizing: content-box;
    justify-content: space-between;
  }
  .operation button{
    width: 306rpx;
    height: 64rpx;
    background: #b4321f;
    font-size: 28rpx;
    line-height: normal;
    padding:14rpx 0;
    color: #fff;
  }
  .operation .chaseUpdateNo{
    background: #aaaaaa;
  }
  .book_info{
    width: 610rpx;
    padding: 40rpx 70rpx;
    display: flex;
    flex-flow: nowrap;
    box-sizing: content-box;
    justify-content: space-between;
    border-top: 1px solid #e1e1e2;
    border-bottom: 1px solid #e1e1e2;
  }
  .book_info .info_item{
    height: 76rpx;
    font-weight: bold;
    text-align: center;
  }
  .info_item .item_tips{
    font-size: 26rpx;
    display: block;
    color: #7f7f7f;
  }
  .info_item .item_tips_num {
    color: black;
  }
  .book_tags{
    width: 690rpx;
    display: flex;
    padding: 20rpx 30rpx;
    flex-flow: nowrap;
    box-sizing: content-box;
    justify-content: flex-start;
    color: #fff;
    border-bottom: 1px solid #e1e1e2;
  }
  .tags_item{
    opacity: 0.6;
    font-size: 24rpx;
    padding: 3rpx 20rpx 0;
    letter-spacing: 4rpx;
    border-radius: 10rpx;
    margin-right: 10rpx;
  }
  .book_introduction{
    width: 610rpx;
    padding: 40rpx 70rpx;
    font-family: couriernew, courier, monospace;
    letter-spacing: 2rpx;
    font-size: 24rpx;
    color: rgba(0, 0, 0, 0.65);
  }